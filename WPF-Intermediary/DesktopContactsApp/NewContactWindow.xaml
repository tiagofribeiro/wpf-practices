<Window x:Class="DesktopContactsApp.NewContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        Title="NewContactWindow" Height="320" Width="320">
    <Grid>
        <Border BorderThickness="10">
            <StackPanel>
                <TextBox x:Name="nameTextBox" Margin="0,4"/>
                <TextBox x:Name="emailTextBox" Margin="0,4"/>
                <TextBox x:Name="phoneTextBox" Margin="0,4"/>
                <Button  x:Name="saveButton" Content="Save" Click="saveButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
